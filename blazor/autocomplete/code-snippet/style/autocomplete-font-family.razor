    /*Text in DropDownList*/
    .e-custom.e-input-group input.e-dropdownlist {
        font-family: cursive;
    }
    /*Item Text in DropDownList*/
    .e-custom.e-popup-open {
        font-family: cursive;
    }
    /*Dropdownlist filterInput font-family*/
