    #commentsMention {
        min-height: 100px;
        border: 1px solid #D7D7D7;
        width: 600px;
        font-size: 14px;
        padding: 8px;
        border-radius: 4px;
    }

    div#commentsMention[placeholder]:empty:before {
        content: attr(placeholder);
        color: #555;
    }

</style>

