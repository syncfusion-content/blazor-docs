    #container {
        padding: 20px;
    }

    .control-section {
        display: flex;
        gap: 20px;
        justify-content: space-between;
    }

    .editor {
        flex: 1;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #fff;
    }

    .header {
        padding: 10px;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
        border-bottom: 1px solid #ddd;
        background-color: #f8f9fa;
    }
    
  p {
